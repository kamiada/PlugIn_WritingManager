{
  "description": "Allows user to track progress in their writing projects",
  "manifest_version": 2,
  "name": "WritingManager",
  "version": "1.0",
  "homepage_url": "https://github.com/kamiada/PlugIn_WritingManager",
  "background": {
    "scripts": [
      "jquery-3.4.1.min.js",
      "popup/main.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js; object-src 'self'",
  "browser_action": {
    "default_icon": "icons/softIcon.png",
    "default_title": "Writing Manager",
    "default_popup": "popup/main.html"
  }
}